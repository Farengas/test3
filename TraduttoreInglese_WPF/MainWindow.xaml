<Window x:Class="WPF_PronunciaInglese.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Traduttore di numeri in inglese" Height="250" Width="400" Background="BlanchedAlmond" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Inserisci un numero da tradurre:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,7,0,0" Foreground="Black"/>
            <TextBox x:Name="NumberInput" Height="30" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="White" Foreground="Black" FontSize="16"/>
            <Button Content="Convert" Height="30" Background="DarkSalmon" Foreground="Black" FontSize="16" Click="OnConvertButtonClick"/>
            <TextBlock x:Name="ResultText" Height="90" Margin="0,10,0,0" Background="White" Foreground="Black" FontSize="16" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
